extends layout
block content
    #login-wrap
        .panel.panel-primary
            .panel-heading
                .panel-title TalkSocket
            .panel-body
                form.form-horizontal
                    .fieldset
                        legend 
                            h3 Use this key
                            .divider
                            input.form-control(type="text", placeholder="Generated Key", class="genKey")
                        .form-group
                            .col-lg-10
                                h3 or enter a key
                                input.form-control(type='text', placeholder='Your friend\'s key')
                        .form-group
                            .col-lg-10
                                button.btn.btn-primary(type='submit') Submit
                                .divider
                                button.btn.btn-default(type='reset') Regenerate
